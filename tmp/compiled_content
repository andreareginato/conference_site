  <id>http://lelylan.com/</id>
  <title>Lelylan - reThink your house</title>
  <updated>2011-12-12T23:00:00Z</updated>
  <link rel="alternate" href="http://lelylan.com/"/>
  <link rel="self" href="http://lelylan.com/feed/"/>
  <author>
